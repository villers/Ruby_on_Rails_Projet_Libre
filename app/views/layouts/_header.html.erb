<div class="navbar navbar-inverse navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "WacTweet", root_path, class: "navbar-brand" %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right header-menu">
        <% if user_signed_in? -%>
          <li>
            <%= link_to users_path do %>
              <%= icon("users") %>
              <span>Users</span>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_url do %>
              <%= icon("user") %>
              <span>Profil</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_url, method: "delete" do %>
              <%= icon("sign-out") %>
              <span>Sign out</span>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "Users", users_path %>
          </li>
          <li>
            <%= link_to "All tweets", tweets_path %>
          </li>
          <li>
            <%= link_to "Sign In", new_user_session_url %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
